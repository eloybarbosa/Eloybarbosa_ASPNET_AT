@model Eloybarbosa_ASPNET_AT.Models.Aniversariante

@{
    ViewData["Title"] = "Create";
}


    <div class="container">
        <h1 class="display-4">Cadastrar Aniversariante</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sobrenome" class="control-label"></label>
                        <input asp-for="Sobrenome" class="form-control" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nascimento" class="control-label"></label>
                        <input asp-for="Nascimento" class="form-control" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cadrastrar" class="btn btn-dark" />
                    </div>
                </form>
            </div>
        </div>


        <div>
            <a class="btn btn-dark" asp-action="Index">Lista de Aniversariantes</a>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
