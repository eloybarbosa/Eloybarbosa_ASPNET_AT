@model IEnumerable<Eloybarbosa_ASPNET_AT.Models.Aniversariante>

@{
    ViewData["Title"] = "Index";
}
    <div class="container">
        <h1 class="display-4 text-center">Aniversariantes Cadastrados</h1>

        <p>
            <a class="btn btn-lg btn-dark btn-block" asp-area="" asp-controller="Aniversariantes" asp-action="Create">Cadastrar</a>
        </p>
        <p>
            <a class="btn btn-lg btn-danger btn-block" asp-area="" asp-controller="Aniversariantes" asp-action="AniversarianteDia">Aniversariantes do Dia</a>
        </p>

        <form asp-controller="Aniversariantes" asp-action="Search" method="get">
            <div class="form-group">
                <label class="control-label">Pesquisar Pessoa:</label>
                <input class="form-control" name="query" id="query" />
            </div>
            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-primary" />
            </div>
        </form>


        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sobrenome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nascimento)
                    </th>
                    <th>
                        <span>Opções</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sobrenome)
                        </td>
                        <td>
                            @item.Nascimento.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
